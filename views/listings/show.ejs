<% layout("/layouts/boilerplate") %>

    <body>
        <script>
            window.mapAPIKey = "<%= MAP_API_KEY %>";
            window.listingCoords = <%- JSON.stringify(detailListing.geometry.coordinates) %>;
            window.listingTitle = "<%= detailListing.title %>";

        </script>

        <div class="row">
            <div class="col-8 offset-2 mt-3">

                <h3>
                    <%= detailListing.title %>
                </h3><br>

            </div>


            <div class="card col-8 offset-2 show-card">


                <img src="<%= detailListing.image.url %>" class="card-img-top show-img"
                    alt="<%= detailListing.image.filename %>">
                <div class="card-body">


                    <p class="card-text"><i>
                            Listed By <%= detailListing.owner.username %>
                        </i></p>

                    <hr>
                    <p class="card-text">
                        <b>Description:</b><br>
                        <%= detailListing.description %>
                    </p>
                    <p class="card-text"> <b>Price:</b> &nbsp; &#8377; <%= detailListing.price.toLocaleString("en-IN")
                            %> / night </p>
                    <p class="card-text">
                        <b>Located at: </b><br>
                        <%= detailListing.location %>
                            <br>
                            <%= detailListing.country %>
                    </p>
                    <p class="card-text">
                        <b>Category: </b><br>
                        <%= detailListing.category %>
                    </p>
                </div>

            </div>

            <% if(currentUser && currentUser._id.equals(detailListing.owner._id)) { %>
                <div class="btns mt-3 offset-2 d-flex">
                    <a href="/listings/<%= detailListing._id %>/edit" class="btn btn-dark submit-btn me-3">Edit</a>
                    <form method="Post" action="/listings/<%= detailListing._id %>?_method=DELETE">
                        <button class="btn btn-dark">Delete</button>
                    </form>
                </div>
                <% } %>

                    <% if(currentUser) { %>

                        <div class="col-8 offset-2 mt-3 mb-3">
                            <hr>
                            <h4>Leave a Review</h4>

                            <form method="post" action="/listings/<%= detailListing._id %>/reviews" novalidate
                                class="needs-validation">

                                <!-- <div class="mt-3 mb-3">
                            <label for="Rating" class="form-label">Rating</label>
                            <input type="range" min="1" max="5" id="Rating" name="review[rating]" value="3"
                                class="form-range">
                            <output for="Rating" id="rangeValue" aria-hidden="true"></output>
                        </div> -->

                                <div class="mt-3 mb-3">
                                    <label for="Rating" class="form-label">Rating</label>
                                    <fieldset class="starability-slot">

                                        <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]"
                                            value="1" checked aria-label="No rating." />
                                        <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                                        <label for="first-rate1" title="Terrible">1 star</label>
                                        <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                                        <label for="first-rate2" title="Not good">2 stars</label>
                                        <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                                        <label for="first-rate3" title="Average">3 stars</label>
                                        <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                                        <label for="first-rate4" title="Very good">4 stars</label>
                                        <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                                        <label for="first-rate5" title="Amazing">5 stars</label>
                                    </fieldset>
                                </div>

                                <div class="mb-3">
                                    <label for="Comment" class="form-label">Comment</label>
                                    <textarea name="review[comment]" id="comment" cols="30" rows="10"
                                        class="form-control" required></textarea>
                                    <div class="invalid-feedback">
                                        Please Enter your comment.
                                    </div>

                                </div>

                                <button class="btn submit-btn">Submit</button>


                            </form>


                        </div>

                        <% } %>



                            <% if(detailListing.reviews.length) { %>
                                <div class="col-8 offset-2 mb-3">
                                    <div class="row">
                                        <hr>

                                        <p><b>All reviews</b></p>
                                        <% for (review of detailListing.reviews) { %>
                                            <div class="card col-5 mb-3 ms-3 ">
                                                <div class="card-body">
                                                    <h5 class="card-title">
                                                        <% if(review.author) { %>
                                                            @<%= review.author.username %>
                                                                <% } %>
                                                    </h5>

                                                    <p class="starability-result card-text"
                                                        data-rating="<%= review.rating %>">
                                                        Rated: <%= review.rating %> stars</p>

                                                    <p class="card-text">
                                                        <%= review.comment %>
                                                    </p>


                                                </div>
                                                <% if(currentUser && currentUser._id.equals(review.author._id)) { %>
                                                    <form method="POST"
                                                        action="/listings/<%= detailListing._id %>/reviews/<%= review._id %>?_method=DELETE"
                                                        class="mt-3 mb-3">
                                                        <button class="btn btn-dark">Delete</button>
                                                    </form>
                                                    <% } %>
                                            </div>
                                            <% } %>

                                    </div>
                                </div>
                                <% } %>

        </div>
        <div class="col-8 offset-2 mt-3 mb-3">
            <hr>
            <h3>Where You'll Be</h3>
            <div id="map"></div>
        </div>

        <script src="/js/map.js"></script>

    </body>