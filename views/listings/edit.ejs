<% layout("/layouts/boilerplate") %>
    <body>

        <div class="row mt-3">
            <div class="col-8 offset-2">
                <h3>EDIT LISTING!</h3>

                <form method="post" action="/listings/<%= editListing._id %>?_method=PUT" novalidate
                    class="needs-validation" enctype="multipart/form-data">

                    <div class="mb-3 mt-3">
                        <label for="title" class="form-label">Edit Title</label>
                        <input type="text" name="title" value="<%= editListing.title %>" class="form-control" required>
                        <div class="invalid-feedback">
                            Please Write a Title.
                        </div>
                    </div>

                    <div class="mb-3">
                        <label for="description" class="form-label">Edit Description</label>
                        <textarea name="description" rows="6" cols="50" class="form-control"
                            required><%= editListing.description %></textarea>
                        <div class="invalid-feedback">
                            Please Write a short Description.
                        </div>
                    </div>

                    <div class="mb-3">
                        <h6>Current Image</h6>
                        <img src="<%= origImage %>" alt="<%= editListing.image.filename %>" style="width: 250px; height: 250px;">
                    </div>

                    <div class="mb-3">
                        <label for="image-url" class="form-label">Change Image</label>
                        <input type="file" name="listing[image]" class="form-control">
                        <div class="invalid-feedback">
                            Please Enter a valid image.
                        </div>
                    </div>

                    <div class="row">
                        <div class="mb-3 col-md-4">
                            <label for="price" class="form-label">Edit Price</label>
                            <input type="number" name="price" value="<%= editListing.price %>" class="form-control"
                                required>
                            <div class="invalid-feedback">
                                Please Enter a valid price.
                            </div>
                        </div>

                        <div class="mb-3 col-md-8">
                            <label for="country" class="form-label">Edit Country</label>
                            <input type="text" name="country" value="<%= editListing.country %>" class="form-control"
                                required>
                            <div class="invalid-feedback">
                                Please Enter a valid country.
                            </div>
                        </div>

                    </div>


                    <div class="mb-3">
                        <label for="location" class="form-label">Edit Location</label>
                        <input type="text" name="location" value="<%= editListing.location %>" class="form-control"
                            required>
                        <div class="invalid-feedback">
                            Please Enter a valid location.
                        </div>
                    </div>

                     <div class="row">
                        <div class="mb-3 col-md-4">
                            <label for="category" class="form-label">Category</label>
                            <select name="category" class="form-select" required>
                                <option value="" selected disabled>Change Category</option>
                                <option value="trending">Trending</option>
                                <option value="rooms">Rooms</option>
                                <option value="iconic cities">Iconic Cities</option>
                                <option value="mountains">Mountains</option>
                                <option value="castles">Castles</option>
                                <option value="amazing pools">Amazing Pools</option>
                                <option value="camping">Camping</option>
                                <option value="farms">Farms</option>
                                <option value="forests">Forests</option>
                                <option value="arctic">Arctic</option>
                                <option value="houseboats">Houseboats</option>
                                <option value="other">Other</option>
                            </select>
                            <div class="invalid-feedback">
                                Please select a valid Category.
                            </div>  
                        </div>
                    </div>

                    <div class="mb-3">

                        <button type="submit" class="btn btn-dark mb-3 submit-btn mt-3">Submit</button>
                    </div>

                </form>

            </div>
        </div>

        
    </body>